<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.korit.BoardStudy.mapper.CommentMapper">
    <select id="getCommentByBoardId">
        SELECT
            *
        FROM
            comment_tb
        WHERE
            board_id = #{boardId}
    </select>
    <select id="getCommentByUserId">
        SELECT
            *
        FROM
            comment_tb
        WHERE
            user_id = #{userId}
    </select>
    <insert id="addComment" useGeneratedKeys="true" keyProperty="commentId">
        INSERT INTO
            comment_tb
        VALUES
            (0, #{comment}, #{userId}, #{boardId}, NOW(), NULL)
    </insert>
    <delete id="deleteCommentByCommentId">
        DELETE FROM
            comment_tb
        WHERE
            comment_id = #{commentId}
    </delete>
    <update id="updateComment">
        UPDATE
            comment_tb
        SET
            comment = #{comment},
            update_dt = NOW()
        WHERE
            comment_id = #{commentId}
    </update>
</mapper>